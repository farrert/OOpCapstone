<Window x:Class="CapStone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapStone"
        xmlns:viewModels="clr-namespace:CapStone.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:GameViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel
             Orientation="Vertical"
            Margin="2"
            HorizontalAlignment="Center"
            Width="400">
            <StackPanel
            Orientation="Horizontal"
            Margin="0"
            HorizontalAlignment="Center"
                Width="350">
                <Button
                  
                    Name="one"
                Width="80"
                Margin="2"
                TextBlock.FontStretch="Normal"
                Command="{Binding BoxChangeCommand}" CommandParameter="X">
                 <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                    </Button>
                
                <Button
                Height="80"
                Width="80"
                Margin="2"
                        Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
            </StackPanel>
            <StackPanel
            Orientation="Horizontal"
            Margin="0"
            HorizontalAlignment="Center"
                Width="350">
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
            </StackPanel>
            <StackPanel
            Orientation="Horizontal"
            Margin="0"
            HorizontalAlignment="Center"
                Width="350">
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
