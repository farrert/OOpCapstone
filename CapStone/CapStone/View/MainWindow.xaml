                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
