             HorizontalAlignment="Right"
            Orientation="Vertical"
            Height="400"
            Width="200"
            Margin="0">
            <StackPanel
                Height="300">
                <Label
                    Content="By: Tom Farrer"
                    FontSize="25"
                    Margin="10"></Label>
                <Label
                    Height="50"></Label>
                <TextBox
                Text="{Binding DisplayTurn}"
                Height="50"></TextBox>
            </StackPanel>
