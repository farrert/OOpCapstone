                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="2"
                    Command="{Binding BoxChangeCommand}" CommandParameter="X">
                    <TextBox
                HorizontalAlignment="Center"
                Text="{Binding DisplayContent}"       
                FontSize="40"
                Width="50"
                Height="50" 
                TextChanged="TextBox_TextChanged"
                IsReadOnly="True"/>
                </Button>
            </StackPanel>

            <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Height="70"
            Width="400"
            Margin="0">
                <Label
                    Width="50"
                HorizontalAlignment="Center"
                    Content="X Wins">
                </Label>
                <TextBox
                    Width="50"
                    Text="{Binding DisplayXWins}">
                </TextBox>

                <Label
                HorizontalAlignment="Center"
                    Content="Match Totals"
                    Width="200"
                    >
                </Label>
                <Label
                    Width="50"
                HorizontalAlignment="Center"
                    Content="O Wins">
                </Label>
                <TextBox
                    Width="50"
                    Text="{Binding OWins}">
                </TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel
                HorizontalAlignment="Left"
            Orientation="Vertical"
            Height="400"
            Width="200"
            Margin="0">
            <Label
                Content="4x4 Tic-Tac-Toe !"
                FontSize="25"
                Margin="10">
            </Label>
            <Label
                    Height="50"></Label>
